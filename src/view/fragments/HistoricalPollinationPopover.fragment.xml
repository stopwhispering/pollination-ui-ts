<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Popover
		placement="Auto"
		showHeader="false"
		horizontalScrolling="false"
		contentWidth="21rem"
		>

        <FlexBox
            visible="{= ${pollinationsModel>/pollination_status} === 'attempt' || ${pollinationsModel>/pollination_status} === 'seed_capsule'  }"
        >
            <core:Fragment
                fragmentName="pollination.ui.view.embedded.PollinationAttemptTemplate"
                type="XML"
            />
        </FlexBox>

        <FlexBox
            visible="{= ${pollinationsModel>/pollination_status} === 'seed' || ${pollinationsModel>/pollination_status} === 'germinated'  }"
        >
            <core:Fragment
                fragmentName="pollination.ui.view.embedded.PollinationWithPlantingsTemplate"
                type="XML"
            />
        </FlexBox>

    </Popover>
</core:FragmentDefinition>