<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<Dialog
		title="Pollination Statistics"
		class="sapUiContentPadding sapUiSizeCompact	"
		afterClose=".onAfterClose"
		contentWidth="60rem"
	>
		<content>
            <Table
                items="{pollination_statistics>/texts_tabular}">
                <columns>
                    <Column>
                        <header>
                            <Label text="Period" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Statistic" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Value" />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Label text="{pollination_statistics>period}" />
                            <Label text="{pollination_statistics>label}" />
                            <Label text="{pollination_statistics>value}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
		</content>

		<beginButton>
			<Button
				type="Ghost"
				text="{i18n>PollinationStatisticsFragment.Refresh}"
				press=".onPressRefresh"/>
		</beginButton>

		<endButton>
			<Button
				text="Close"
				press=".onPressClose"/>
		</endButton>

	</Dialog>
</core:FragmentDefinition>