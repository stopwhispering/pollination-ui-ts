<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ViewSettingsDialog
		confirm=".onConfirmSettings">
		<filterItems>
			<ViewSettingsFilterItem text="Pollinations" key="pollinations">
				<items>
					<ViewSettingsItem text="Current Pollinations" 
						selected="{filterSettingsInput>/ongoing_pollinations}" />
					<ViewSettingsItem text="Finished Pollinations" 
						selected="{filterSettingsInput>/finished_pollinations}" />
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem text="Flower History" key="flower_history">
				<items>
					<ViewSettingsItem text="Inactive Plants" 
						selected="{filterSettingsInput>/flower_history_include_inactive}" />
				</items>
			</ViewSettingsFilterItem>
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>