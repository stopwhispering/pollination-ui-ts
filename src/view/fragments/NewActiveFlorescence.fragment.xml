<core:FragmentDefinition
    xmlns="sap.m"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:core="sap.ui.core">
 
    <Dialog 
        id="newActiveFlorescence"
    	title='Add active Florescence'
		class="sapUiContentPadding"
		afterClose=".onAfterCloseNewActiveFlorescence">
 
	    <content>
            <VBox>
                <SegmentedButton 
                    selectedKey="{newFlorescenceModel>/florescence_status}"
                    enabled="false"
                    width="24.5rem"
                    class="sapUiSmallMarginBottom">
                    <items>
                        <SegmentedButtonItem text="{i18n>NewActiveFlorescenceFragment.InflorescenceAppeared}" key="inflorescence_appeared" />
                        <SegmentedButtonItem text="{i18n>NewActiveFlorescenceFragment.Flowering}" key="flowering" />
                        <SegmentedButtonItem text="{i18n>NewActiveFlorescenceFragment.Finished}" key="finished"/>
                    </items>
                </SegmentedButton>

                <HBox>
                    <VBox>
                        <Label 
                            text="{i18n>NewActiveFlorescenceFragment.Plant}"/>
                        <ComboBox
                            items="{
                                path: 'plantsForNewFlorescenceModel>/',
                                sorter: { path: 'plant_name' }
                            }"
                            selectedKey="{newFlorescenceModel>/plant_id}"
                            class="sapUiTinyMarginEnd"
                            width="15rem">
                            <core:Item 
                                key="{plantsForNewFlorescenceModel>plant_id}" 
                                text="{plantsForNewFlorescenceModel>plant_id} {plantsForNewFlorescenceModel>plant_name}" />
                        </ComboBox>
                    </VBox>

                    <VBox>
                        <Label 
                            text="{i18n>NewActiveFlorescenceFragment.InflorescenceAppearedAt}"/>
                        <HBox>
                            <MaskInput 
                                id="inpInflorescenceAppearedAt"
                                value="{newFlorescenceModel>/inflorescence_appearance_date}"
                                mask="9999-99-99" 
                                width="9rem"
                                class="sapUiTinyMarginEnd"  />
                            <Button 
                                icon="sap-icon://calendar"
                                type="Transparent"
                                press=".onPressNewFlorescenceSetToday"
                                app:inputId= "inpInflorescenceAppearedAt"
                                />
                        </HBox>
                    </VBox>

                </HBox>

                <Label 
                    text="{i18n>NewActiveFlorescenceFragment.Comment}"/>
                <TextArea
                    value="{newFlorescenceModel>/comment}"
                    width="24.5rem"
                    class="sapUiMediumMarginEnd"
                    maxLength="110"
                    placeholder="(e.g. location if multiple plants in one container)"/>

            </VBox>

		</content>

		<beginButton>
			<Button
				type="Emphasized"
				text="{i18n>NewActiveFlorescenceFragment.Submit}"
                enabled="{= !!${newFlorescenceModel>/plant_id} }"
				press=".onPressSubmitNewFlorescence"/>
		</beginButton>
		
		<endButton>
			<Button
				text="{i18n>NewActiveFlorescenceFragment.Cancel}"
				press=".onCancelDialog"/>
		</endButton>				
    </Dialog>
</core:FragmentDefinition>