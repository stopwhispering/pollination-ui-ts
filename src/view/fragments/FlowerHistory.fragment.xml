										xmlns:core="sap.ui.core"
										key="flowering_state"
										value="{flower_history>month_06}"
										writeToDom="true"
									/>
								</customData>
							</FlexBox>
							<FlexBox
								class="flowering_state_cell"
								tooltip="{flower_history>month_07}"
							>
								<Label class="flowering_state_cell" />
								<customData>
									<core:CustomData
										xmlns:core="sap.ui.core"
										key="flowering_state"
										value="{flower_history>month_07}"
										writeToDom="true"
									/>
								</customData>
							</FlexBox>
							<FlexBox
								class="flowering_state_cell"
