										key="flowering_state"
										value="{flower_history>month_11}"
										writeToDom="true"
									/>
								</customData>
							</FlexBox>
							<FlexBox
								class="flowering_state_cell"
								tooltip="{flower_history>month_12}"
							>
								<Label class="flowering_state_cell" />
								<customData>
									<core:CustomData
										xmlns:core="sap.ui.core"
										key="flowering_state"
										value="{flower_history>month_12}"
										writeToDom="true"
									/>
								</customData>
							</FlexBox>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>

		<endButton>
			<Button
				text="Close"
				press=".onPressCloseFlowerHistory"/>
		</endButton>

	</Dialog>
</core:FragmentDefinition>