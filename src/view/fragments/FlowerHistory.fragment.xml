<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<Dialog
		title="Flower History"
		class="sapUiContentPadding sapUiSizeCompact	"
		afterClose=".onAfterCloseFlowerHistory"
		contentWidth="60rem"
	>
		<content>

			<HBox class="sapUiSmallMargin" alignItems="Center">
				<Label text="Include Inactive Plants"
					labelFor="flowerHistorySwitch" 
					class="sapUiSmallMarginEnd"
					/>
				<Switch 
					id="flowerHistorySwitch"
					state="{state>/flower_history_include_inactive}"
					customTextOn=" " 
					customTextOff=" "
					change=".onSwitchIncludeInactivePlants"
					class="sapUiMediumMarginEnd"
					/>
				<Label text="Include Plants not Yet Flowered" 
					labelFor="flowerHistorySwitchNotYetFlowered" 
					class="sapUiSmallMarginEnd"/>
				<Switch 
					id="flowerHistorySwitchNotYetFlowered"
					state="{state>/flower_history_include_not_yet_flowered_plants}"
					customTextOn=" " 
					customTextOff=" "
					change=".onSwitchIncludeNotYetFloweredPlants"
					/>
			</HBox>
			<Table
				id="flowerHistoryList"
				items="{flower_history>/rows}"
				sticky="ColumnHeaders"
			>

				<columns>
					<Column
						width="16rem"
						mergeDuplicates="true"
					>
						<header>
							<Label
								text="Plant"
								textAlign="Center"
							/>
						</header>
					</Column>
					<Column width="6rem">
						<header>
							<Label
								text="Year"
								textAlign="Center"
							/>
						</header>
					</Column>
					<Column>
						<header>
							<Label
								text="01"
								textAlign="Center"
							/>
						</header>
					</Column>
					<Column>
						<header>
							<Label
								text="02"
								textAlign="Center"
							/>
						</header>
					</Column>
					<Column>
						<header>
							<Label
								text="03"
								textAlign="Center"
							/>
						</header>
					</Column>
					<Column>
						<header>
							<Label
								text="04"
								textAlign="Center"
							/>
						</header>
					</Column>
					<Column>
						<header>
							<Label
								text="05"
								textAlign="Center"
							/>
						</header>
					</Column>
					<Column>
						<header>
							<Label
								text="06"
								textAlign="Center"
							/>
						</header>
					</Column>
					<Column>
						<header>
							<Label
								text="07"
								textAlign="Center"
							/>
						</header>
					</Column>
					<Column>
						<header>
							<Label
								text="08"
								textAlign="Center"
							/>
						</header>
					</Column>
					<Column>
						<header>
							<Label
								text="09"
								textAlign="Center"
							/>
						</header>
					</Column>
					<Column>
						<header>
							<Label
								text="10"
								textAlign="Center"
							/>
						</header>
					</Column>
					<Column>
						<header>
							<Label
								text="11"
								textAlign="Center"
							/>
						</header>
					</Column>
					<Column>
						<header>
							<Label
								text="12"
								textAlign="Center"
							/>
						</header>
					</Column>
				</columns>

				<items>
					<ColumnListItem>
						<cells>
							<Text text="{flower_history>plant_name}" />
							<Text text="{flower_history>year}" />
							<FlexBox
								class="flowering_state_cell"
								tooltip="{flower_history>month_01}"
							>
								<Label class="flowering_state_cell" />
								<customData>
									<core:CustomData
										xmlns:core="sap.ui.core"
										key="flowering_state"
										value="{flower_history>month_01}"
										writeToDom="true"
									/>
								</customData>
							</FlexBox>
							<FlexBox
								class="flowering_state_cell"
								tooltip="{flower_history>month_02}"
							>
