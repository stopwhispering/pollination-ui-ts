<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
 
    <Dialog 
    	title='Plant Name'
		class="sapUiContentPadding">
 
	    <content>
            <VBox>

                <Label text="Accept Plant Name Proposal or enter custom name" />
                <Input width="100%" value="{inputPlantNameModel>/plant_name}" placeholder="Plant name (required)" />


            </VBox>
		</content>


        <buttons>
        <Button 
            type="Emphasized"
            text="Submit" 
            press=".onSubmitPlantName" />

        <Button
            text="Cancel"
            press=".onCancelPlantName"
        />
        
		
        </buttons>				
    </Dialog>
</core:FragmentDefinition>