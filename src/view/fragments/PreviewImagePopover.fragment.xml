<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Popover
		placement="Auto"
		showHeader="false"
		horizontalScrolling="false"
		verticalScrolling="true"
		id="popoverPopupImage"
		>
		<VBox>
		<Label 
    		text="[{preview_image_model>/plant_id}] {preview_image_model>/plant_name}"
			wrapping="true"
			/>

    	<Image 
    		press=".onClickImage"
			width="100%"
			src="{preview_image_model>/plant_preview_image_url}"
			/>
		</VBox>

    </Popover>
</core:FragmentDefinition>